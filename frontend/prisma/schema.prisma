// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  output = "./generated"
}

datasource db {
  provider = "postgresql" // or "sqlite" for local dev
}

enum Role {
  STUDENT
  PARENT
  TUTOR
  ADMIN
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hashed
  name      String?
  role      Role     @default(STUDENT)
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  tutorProfile TutorProfile?
  bookings     Booking[]     @relation("StudentBookings")
  reviews      Review[]
}

model TutorProfile {
  id          String   @id @default(uuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id])
  
  bio         String?
  hourlyRate  Decimal
  subjects    String[] // e.g. ["Math", "Physics"]
  availability Json?    // Structured weekly availability
  rating      Float    @default(0)
  
  bookings    Booking[] @relation("TutorBookings")
}

model Booking {
  id        String        @id @default(uuid())
  studentId String
  tutorId   String
  student   User          @relation("StudentBookings", fields: [studentId], references: [id])
  tutor     TutorProfile  @relation("TutorBookings", fields: [tutorId], references: [id])
  
  startTime DateTime
  endTime   DateTime
  status    BookingStatus @default(PENDING)
  totalPrice Decimal
  
  meetingUrl String?      // Generated LiveKit/Video room ID
  studentCameraMode String? // Stores the preferred camera Device ID or 'front'/'back'
  
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model Review {
  id        String   @id @default(uuid())
  rating    Int
  comment   String?
  studentId String
  student   User     @relation(fields: [studentId], references: [id])
  createdAt DateTime @default(now())
}
